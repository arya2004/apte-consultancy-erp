@using ApteConsultancy.Models.Master;
@model List<Architect>

      <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Architect" asp-action="Create">New</a>
<div class="card">
            <div class="card-body">
              <h5 class="card-title">Architects</h5>
               
              <!-- Default Table -->
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">Contact Person </th>
                    <th scope="col">Email</th>
                    <th scope="col">GstNUmber</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  
                    @foreach(var obj in Model)
                    {
                        <tr>
                    <th scope="row">1</th>
                    <td>@obj.CompanyName</td>
                    <td>@obj.ContactPerson1</td>
                    <td>@obj.Email1</td>
                    <td>@obj.GstNUmber</td>
                    <td><a asp-area="Admin" asp-controller="Architect" asp-action="Edit" asp-route-id="@obj.ArchitectId" type="button" class="btn btn-warning">Edit</a></td>
                    <td><a asp-area="Admin" asp-controller="Architect" asp-action="Delete" asp-route-id="@obj.ArchitectId" type="button" class="btn btn-danger">Delete</a></td>
                    </tr>
                    }
                  
                  
                </tbody>
              </table>
              <!-- End Default Table Example -->
            </div>
          </div>