@using ApteConsultancy.Models.Master;
@model Company
          <a type="button" class="btn btn-warning" asp-area="Admin" asp-controller="Company" asp-action="Index">Back</a>
<div class="pagetitle">
    <h1>Delete Company</h1>

</div><!-- End Page Title -->
              <!-- General Form Elements -->
              <form method="post">
                <input asp-for="CompanyId" hidden />
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Code</label>
                  <span asp-validation-for="CompanyCode" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="CompanyCode" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                       <span asp-validation-for="Name" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Director</label>
                       <span asp-validation-for="DirectorName" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="DirectorName" type="text" class="form-control">
                  </div>
                </div>
                 <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Director Employee COde</label>
                       <span asp-validation-for="DirectorEmployeeCode" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="DirectorEmployeeCode" type="number" class="form-control">
                  </div>
                </div>
                 <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Mobile</label>
                       <span asp-validation-for="DirectorMobile" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="DirectorMobile" type="number" class="form-control">
                  </div>
                </div>
                 <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Landline</label>
                       <span asp-validation-for="LandLine" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="LandLine" type="number" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                       <span asp-validation-for="DirectorEmail" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="DirectorEmail" type="email" class="form-control">
                  </div>
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Add 1</label>
                       <span asp-validation-for="AddressLine1" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="AddressLine1" type="text" class="form-control">
                  </div> 
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Add 2</label>
                       <span asp-validation-for="AddressLine2" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="AddressLine2" type="text" class="form-control">
                  </div>
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Add 3</label>
                       <span asp-validation-for="AddressLine3" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="AddressLine3" type="text" class="form-control">
                  </div>
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">City</label>
                       <span asp-validation-for="City" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="City" type="text" class="form-control">
                  </div>
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">State</label>
                       <span asp-validation-for="State" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="State" type="text" class="form-control">
                  </div>
                </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">COuntry</label>
                       <span asp-validation-for="Country" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="Country" type="text" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Postal COde</label>
                       <span asp-validation-for="PostalCode" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="PostalCode" type="number" class="form-control">
                  </div>
                </div>
                    <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Pan Number</label>
                       <span asp-validation-for="PanNumber" class="text-danger"></span>
                  <div class="col-sm-10">
                    <input asp-for="PanNumber" type="text" class="form-control">
                  </div>
                
               <div class="row mb-3 mt-3">
                  <label class="col-sm-2 col-form-label">Submit Button</label>
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
        //client side validation
    }
}